<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff0db"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/colorTop"
        android:background="#a04000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/color_maker"
        android:textColor="#FFFF"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/colorView"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginBottom="24dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/colorTop"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Red -->

    <Switch
        android:id="@+id/Redswitch"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:trackTint="#FF0000"
        android:layout_marginStart="40dp"
        android:layout_marginTop="45dp"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        app:layout_constraintTop_toBottomOf="@id/colorView"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/RedseekBar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:layout_marginTop="60dp"
        android:thumbTint="#FF0000"
        android:progressBackgroundTint="#FF0000"
        app:layout_constraintStart_toEndOf="@id/Redswitch"
        app:layout_constraintTop_toBottomOf="@id/colorView"
        app:layout_constraintEnd_toStartOf="@id/redText"/>

    <EditText
        android:id="@+id/redText"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:autofillHints=""
        android:inputType="numberDecimal"
        android:maxLength="4"
        android:hint="@string/_0_0"
        android:background="#FF0000"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/colorView"
        app:layout_constraintStart_toEndOf="@id/RedseekBar"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Green -->

    <Switch
        android:id="@+id/Greenswitch"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginStart="40dp"
        android:minHeight="48dp"
        android:trackTint="#00AA00"
        app:layout_constraintTop_toBottomOf="@id/Redswitch"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        tools:layout_editor_absoluteX="38dp" />

    <SeekBar
        android:id="@+id/GreenseekBar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:thumbTint="#00AA00"
        android:progressBackgroundTint="#00AA00"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@id/RedseekBar"
        app:layout_constraintStart_toEndOf="@id/Greenswitch"
        app:layout_constraintEnd_toStartOf="@id/greenText"/>

    <EditText
        android:id="@+id/greenText"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:autofillHints=""
        android:inputType="numberDecimal"
        android:maxLength="4"
        android:hint="@string/_0_0"
        android:background="#00AA00"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toEndOf="@id/GreenseekBar"
        app:layout_constraintTop_toBottomOf="@id/redText"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Blue -->

    <Switch
        android:id="@+id/Blueswitch"
        android:layout_width="50dp"
        android:trackTint="#0000FF"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:layout_marginTop="45dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/Greenswitch"
        app:layout_constraintStart_toStartOf="parent"/>

    <SeekBar
        android:id="@+id/BlueseekBar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:layout_marginTop="75dp"
        android:thumbTint="#0000FF"
        android:progressBackgroundTint="#0000FF"
        app:layout_constraintStart_toEndOf="@id/Blueswitch"
        app:layout_constraintTop_toBottomOf="@id/GreenseekBar"
        app:layout_constraintEnd_toStartOf="@id/blueText"/>

    <EditText
        android:id="@+id/blueText"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:autofillHints=""
        android:hint="@string/_0_0"
        android:inputType="numberDecimal"
        android:maxLength="4"
        android:layout_marginTop="45dp"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:background="#0000FF"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toEndOf="@id/BlueseekBar"
        app:layout_constraintTop_toBottomOf="@id/greenText"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Reset Button added later -->

    <Button
        android:id="@+id/resetButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#a04000"
        android:text="@string/Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BlueseekBar"
        app:layout_constraintVertical_bias="0.15" />

</androidx.constraintlayout.widget.ConstraintLayout>